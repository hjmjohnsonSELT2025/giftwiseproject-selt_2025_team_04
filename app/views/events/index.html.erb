<!DOCTYPE html>
<html>
<main>
  <%# This file is app/views/movies/index.html.erb %>
  <h1>All Events</h1>

  <table id="events">
    <thead>
      <tr>
        <th>Title</th>
        <th>Location</th>
        <th>Theme</th>
        <th>Date</th>
        <th>More info</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.location %></td>
          <td><%= event.theme %></td>
          <td><%= event.date %></td>
          <td><%= link_to "More about #{event.title}", event_path(event) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Add new event', new_event_path %>
</main>
</html>